{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Library/Mobile Documents/com~apple~CloudDocs/**" }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        { "path": "$HOME/Documents/**" },
        { "path": "$HOME/Library/Mobile Documents/com~apple~CloudDocs/**" }
      ]
    },
    "updater:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-install",
    "process:default",
    "process:allow-restart",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.config" },
        { "path": "$HOME/.config/Zinnia" },
        { "path": "$HOME/.config/Zinnia/**" }
      ]
    },
    "dialog:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-clear"
  ]
}
