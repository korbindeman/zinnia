{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zinnia",
  "identifier": "co.korbin.zinnia",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/Documents/**",
          "$HOME/Library/Mobile Documents/com~apple~CloudDocs/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDNzMyRjk3N0IyNUU3NTUKUldSVjV5VjdseTl6UElENzRyNUh6N0RJWlJwM0RTc2VpQVYrOTR6bmJ2ZmNQYW91UHNUSFVDWjYK",
      "endpoints": [
        "https://github.com/korbindeman/zinnia/releases/latest/download/latest.json"
      ]
    }
  }
}
